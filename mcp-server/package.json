{
  "name": "community-graph-mcp",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:web": "npm run build -w @community-graph/web",
    "build:widget": "npm run build -w @community-graph/widget",
    "test": "npm run test --workspaces --if-present",
    "test:e2e": "npm run test:e2e -w @community-graph/web",
    "dev": "npm run dev -w @community-graph/web"
  }
}
